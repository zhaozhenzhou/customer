			 <input class="easyui-numberspinner" style="width:80px;" 
                    data-options="min:1,max:100,editable:true" />
		</td>
	</tr>
	<tr>
		<th>创建人</th>
		<td>
		    <select>
			   <option>---全部---</option>
			   <option>张三</option>
			   <option>李四</option>
			   <option>王五</option>
			</select>
		</td>
		<th>状态</th>
		<td colspan="3">
			 <select>
			   <option>---全部---</option>
			   <option>未分配</option>
			   <option>已分配</option>
			</select>
		</td>
	</tr>
	<tr>
		<th>创建时间</th>
		<td colspan="5">
			<input class="easyui-datebox">
			</input> 
			&nbsp;至　
			<input class="easyui-datebox"></input>
		</td>
	</tr>
	</table>
<br />
